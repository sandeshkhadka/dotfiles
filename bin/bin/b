#!/bin/bash
# reader="zathura"
reader="xdg-open"
# reader="sioyek"
book=$(find ~/Downloads/epubs ~/Downloads/pdfs ~/sem -type f | rofi -dmenu)
if [ -z "$book" ]
then
  exit
else
  if [ -z "$1" ]
  then

    nohup "$reader" "$book" > ~/nohup.out &
  else
    nohup "$1" "$book" > ~/nohup.out & 
  fi

fi
